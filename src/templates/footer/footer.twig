<component is="sticky-menu" :user="{{ user|json_encode()|e('html_attr') }}"></component>
<component is="country" 
           :countries="{{ countries|json_encode()|e('html_attr') }}"
></component>
<component is="catalogue" 
           :categories="{{ categories|json_encode()|e('html_attr') }}"
></component>
<component is="mobile-menu" 
           :countries="{{ countries|json_encode()|e('html_attr') }}"
></component>
<component is="modal">
    <template v-slot:listingcat>
        {% if filters.filters is not empty %}
            <div class="listing__subcategories listing__subcategories--filter">
                {% for subcategory in listingCategories.subcategories|slice(0, 1) %}
                    {% include '../listing/listing-subcategories.twig' with {'subcategory': subcategory, 'main': true} %}
                {% endfor %}
                <component is="all-categories">
                    {% for subcategory in listingCategories.subcategories|slice(1) %}
                        {% include '../listing/listing-subcategories.twig' with {'subcategory': subcategory, 'main': false} %}
                    {% endfor %}
                </component>
            </div>
        {% endif %}
    </template>
</component>
<component is="sticky-mobile-button"></component>
{% if showStickyCard %}
<component is="sticky-card" 
           :product="{{ product|json_encode()|e('html_attr') }}"
></component>
{% endif %}



