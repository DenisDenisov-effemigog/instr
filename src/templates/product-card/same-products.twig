<div class="slider-cards  slider-cards--short-card">
    <div class="slider-cards__title">Похожие товары</div>
    <component 
        is="slider-cards"
        :dots="false"
    >
        {% for product in productsSames %}
            <div class="slider-cards__slide">
                <card
                    :change-icon="true"
                    :card-size="'short'"
                    :product="{{ product|json_encode()|e('html_attr') }}"
                >
                    {% include '../partials/card.twig' with {'product': product} %}
                </card>
            </div>
        {% endfor %}
    </component>
</div>