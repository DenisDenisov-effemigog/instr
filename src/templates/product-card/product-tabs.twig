<component is="product-tabs"
    :features="{{ product.features|json_encode()|e('html_attr') }}"
    :description="{{ product.description|json_encode()|e('html_attr') }}"
    :questions="{{ product.questions|json_encode()|e('html_attr') }}"
>
    <template v-slot:features>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Основные характеристики</div>
            <ul class="product-tabs__features product-tabs__features_main">
                {% for feature in product.features.main %}
                    <li class="product-tabs__features-item">
                        <div class="product-tabs__features-dash">
                            <span>{{feature.title}}</span>
                        </div>
                        <div class="product-tabs__features-value">
                            {{feature.value}}
                            {% if feature.country %}
                            <svg class="product-tabs__features-country" viewBox="0 0 36 24">
                                {% if feature.country == 'Germany' %}
                                    <use :xlink:href="templatePath + 'images/sprite.svg#countries__germany'"></use>
                                {% elseif feature.country == 'China' %}
                                    <use :xlink:href="templatePath + 'images/sprite.svg#countries__china'"></use>
                                {% endif %}
                            </svg>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Параметры упаковки</div>
            <ul class="product-tabs__features product-tabs__features_packaging">
                {% for feature in product.features.packaging %}
                    <li class="product-tabs__features-item">
                        <div class="product-tabs__features-dash"><span>{{feature.title}}</span></div>
                        <div class="product-tabs__features-value">{{feature.value}}</div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Комплектация товара</div>
            <ul class="product-tabs__features product-tabs__features_equipment">
                {% for feature in product.features.equipment %}
                    <li class="product-tabs__features-item">
                        <div class="product-tabs__features-dash"><span>{{feature.title}}</span></div>
                        <div class="product-tabs__features-value">{{feature.value}}</div>
                    </li>
                {% endfor %}
            </ul>
        </div>  
    </template>
    <template v-slot:description>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Описание товара</div>
            <p class="product-tabs__content-text">{{product.description.description}}</p>
        </div>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Особенности</div>
            <div class="product-tabs__content-grid">
                {% for feature in product.description.features %}
                    <div class="product-tabs__content-grid-item">
                        <div class="product-tabs__content-feature">
                            <img class="product-tabs__feature-img" src="{{ feature.image}}" alt="{{product.name|e('html_attr')}}">
                            <div class="product-tabs__feature">
                                <div class="product-tabs__content-title">{{ feature.title}}</div>
                                <div class="product-tabs__content-text">{{ feature.value}}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="product-tabs__content-layout">
            <div class="product-tabs__content-title">Преимущества</div>
            <ul class="product-tabs__content-list">
                {% for advantage in product.description.advantages %}
                    <li>{{advantage}}</li>
                {% endfor %}
            </ul>
        </div>
    </template>
    <template v-slot:questions>
        <div class="product-tabs__content-answer">
            <form class="product-tabs__form">
                <div class="product-tabs__content-title">Задайте вопрос о товаре</div>
                <input class="product-tabs__input" type="text">
            </form>
            {% for question in product.questions %}
                <div class="product-tabs__answer">
                    <div class="product-tabs__content-title">{{question.name}}</div>
                    <div class="product-tabs__question">
                        <svg  viewBox="0 0 18 18">
                            <use :xlink:href="templatePath + 'images/sprite.svg#icons__question'"></use>
                        </svg>
                        <div class="product-tabs__content-subtitle">{{question.question}}</div>
                    </div>
                    <div class="product-tabs__answer-text">
                        {{question.answer}}
                        <span class="product-tabs__text-prompt">… <span>Читать полностью</span></span>       
                    </div>    
                </div>
            {% endfor %}
        </div>
    </template>
</component>