                <div class="about-us__desc">
                    <div class="about-us__text">
                        <p>{{ 'about_us.text_1'|trans }}</p>
                        <p>{{ 'about_us.text_2'|trans }}</p>
                        <p>{{ 'about_us.text_3'|trans }}</p>
                    </div>
                    <div class="about-us__btn">
                        <component is="catalogue-btn"></component>
                    </div>
                </div>
            </div>
        </div>
    </div>
