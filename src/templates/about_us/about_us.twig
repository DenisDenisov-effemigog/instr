            <h2 class="about-us__title">{{ 'about_us.title'|trans }}</h2>
        </div>
        <div class="about-us__main">
            <div class="about-us__pic">
                <img src="./demo_images/about_us/about_us_pic.jpg" alt="" class="about-us__img">
