<section class="banners-section">
    <div class="link-more">
		<a class="link-more__text">
            Больше товаров тут
			<svg class="link-more__icon" viewbox="0 0 12 10">
				<use xlink:href="./images/sprite.svg#arrows__arrow-right"></use>
			</svg>
        </a>
	</div>
    <div class="banners-section__title">Акции</div>
    <component is="slider-action">
        {% for slide in actionBanners %}
            <div class="slider-action__slide">
                <div class="">
                    <img src="{{ slide.img }}" alt="">
                </div>
            </div>
        {% endfor %}
    </component>
</section>